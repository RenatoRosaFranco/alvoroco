<%=  form_for(@contact, {url: contact_path, method: :post}) do |f| %>
 <div class='col-md-6'>
  <div class='field'>
   <div class='col-md-12'>
  	 <%= f.text_field :name, class: 'form-control', required: 'required',
  	 placeholder: 'Digite o nome', autocomplete:'off' %>
  </div>
 </div>
  <div class='field'>
  	<div class='col-md-12'>
      <%= f.text_field :phone, class: 'form-control', required: 'required',
  	  placeholder: 'Digite o telefone', autocomplete: 'off' %>
  	</div>
  </div>
  <div class='field'>
   <div class='col-md-12'>
     <%= f.email_field :email, class: 'form-control', required: 'required',
  	 placeholder: 'Digite o e-mail', autocomplete: 'off' %>
  </div>
</div>
</div>
<div class='col-md-6'>
  <div class='field'>
   <div class='col-md-12'>
  	<%= f.text_area :message, class: 'form-control', required: 'required',
  	placeholder: 'Deixe sua mensagem', autocomplete: 'off' %>
   </div>
  </div>
</div>
<div class='col-md-4 col-md-offset-4'>
  <div class='field'>
    <div class='col-md-12'>
  	<%= f.submit 'Enviar Mensagem', class: 'btn btn-primary btn-lg top' %>
  	</div>
  </div>
</div>
<% end %>

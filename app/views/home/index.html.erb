   	  	</div><!-- col-md-12 -->
   	  </div><!-- row -->
   </div><!-- container -->
</section><!-- projects -->

<section id='films' ng-controller="FilmsController as filmCtrl">
  <div class='container'>
  	<div class='row'>
  	   <div class='col-md-12'>
  	   	  <ul class='list-unstyled text-center'>
  	   	  	 <li><h1><i class='glyphicon glyphicon-search'></i> FILMES</h1></li>
  	   	  	 <li><p>Conheça nossos filmes</p></li>
  	   	  	 <li><hr></li>
  	   	  </ul><!-- list-unstyled -->

  	   	  <div class='col-md-12'>
  	   	  	<div class='col-md-4 col-md-offset-4'>
  	   	  		<%= form_for(:film) do |f| %>
                    <div class='field'>
                       <div class='input-group'>
                       <div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
                       <%= f.text_field :name, class: 'form-control', required: 'required',
                       placeholder: 'Buscar filme...', autocomplete: 'off', 'ng-model': 'name' %>
                       </div><!-- input-group -->
                    </div><!-- field -->
  	   	  		<% end %><br>
  	   	  	</div><!-- col-md-4 -->
  	   	  </div><!-- col-md-12 -->

  	   	  <div class='col-md-4' ng-repeat="film in filmCtrl.films | filter: name ">
  	   	  	 <div class='panel panel-default'>
  	   	  	 	<ul class='list-unstyled padding'>
  	   	  	 		<li><a href=''><h4><strong>{{ film.name }}</strong></h4></a></li>
  	   	  	 		<li><p>{{ film.description | limitTo: 120 }}</p></li>
  	   	  	 	</ul><!-- list-unstyled -->
  	   	  	 </div><!-- panel panel-default -->
  	   	  </div><!-- col-md-4 -->

  	   </div><!-- col-md-12 -->
  	</div><!-- row -->
  </div><!-- container -->
</section><!-- films -->
	

<section id='projects' ng-controller="ProjectsController as projectCtrl">
   <div class='container'>
   	  <div class='row'>
   	  	<div class='col-md-12'>
   	  		<ul class='list-unstyled text-center'>
   	  		   <li><h1><i class='glyphicon glyphicon-search'></i> PROJETOS</h1></li>
   	  		   <li><p>Conheça nossos projetos.</p></li>
   	  		   <li><hr></li>
   	  		</ul><!-- list-unstyled -->

   	  		<div class='col-md-4' ng-repeat="project in projectCtrl.films">
   	  		  <div class='panel panel-default'>
   	  		  	<ul class='list-unstyled'>
   	  		  	   <li><a href=''><h4>{{ project.name }}</h4></li></a>
   	  		  	   <li><p>{{ project.description }}</p></li>
   	  		  	</ul><!-- list-unstyled -->
   	  		  </div><!-- panel panel-default -->
